---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
---

<header>
	<nav>
		<h2 class="brand">
			<a href="/">
				<span class="logo-container">
					<span class="logo-text">RB</span>
				</span>
				<span class="brand-text">
					<span class="brand-name">{SITE_TITLE}</span>
					<span class="brand-tagline">Legal Insights & Analysis</span>
				</span>
			</a>
		</h2>
		<div class="internal-links">
			<HeaderLink href="/">Home</HeaderLink>
			<HeaderLink href="/blog">Articles</HeaderLink>
			<HeaderLink href="/about">About</HeaderLink>
		</div>
		<div class="social-links">
			<a href="https://www.linkedin.com/in/russellbrenner" target="_blank">
				<span class="sr-only">LinkedIn Profile</span>
				<svg viewBox="0 0 24 24" aria-hidden="true" width="24" height="24">
					<path fill="currentColor" d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
				</svg>
			</a>
			<a href="mailto:legal@briefer.me" target="_blank">
				<span class="sr-only">Email Contact</span>
				<svg viewBox="0 0 24 24" aria-hidden="true" width="24" height="24">
					<path fill="currentColor" d="M20 4H4c-1.1 0-1.99.9-1.99 2L2 18c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 4l-8 5-8-5V6l8 5 8-5v2z"/>
				</svg>
			</a>
		</div>
	</nav>
</header>
<style>
	header {
		margin: 0;
		padding: 0;
		background: rgb(var(--cream));
		border-bottom: 1px solid rgb(var(--gray-light));
		box-shadow: 0 1px 4px rgba(var(--black), 5%);
	}
	
	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
		max-width: 1200px;
		margin: 0 auto;
		padding: 0 2em;
	}
	
	h2 {
		margin: 0;
		font-size: 1em;
	}
	
	.brand a {
		display: flex;
		align-items: center;
		gap: 1em;
		text-decoration: none;
		padding: 1.25em 0;
	}
	
	.logo-container {
		width: 42px;
		height: 42px;
		background: linear-gradient(135deg, rgb(var(--black)) 0%, rgb(var(--gray-dark)) 100%);
		color: white;
		display: flex;
		align-items: center;
		justify-content: center;
		font-family: "Inter", sans-serif;
		font-weight: 900;
		font-size: 0.875rem;
		letter-spacing: -0.1em;
		border-radius: 8px;
		position: relative;
		overflow: hidden;
		box-shadow: 0 2px 8px rgba(var(--black), 0.15);
	}
	
	.logo-container::before {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		background: linear-gradient(45deg, transparent 30%, rgba(255,255,255,0.1) 50%, transparent 70%);
		transform: translateX(-100%);
		transition: transform 0.6s ease;
	}
	
	.brand a:hover .logo-container::before {
		transform: translateX(100%);
	}
	
	.brand-text {
		display: flex;
		flex-direction: column;
		gap: 0.1em;
	}
	
	.brand-name {
		font-family: "Inter", sans-serif;
		font-weight: 800;
		font-size: 1.375rem;
		color: rgb(var(--black));
		letter-spacing: -0.04em;
		font-feature-settings: "ss01" on, "ss02" on;
		line-height: 1.1;
	}
	
	.brand-tagline {
		font-family: "Inter", sans-serif;
		font-size: 0.8125rem;
		color: rgb(var(--gray));
		font-weight: 400;
		letter-spacing: 0.02em;
		text-transform: uppercase;
		opacity: 0.8;
	}
	
	.internal-links {
		display: flex;
		gap: 0.5em;
	}
	
	.internal-links a {
		padding: 0.75em 1em;
		color: rgb(var(--gray-dark));
		text-decoration: none;
		font-family: "Inter", sans-serif;
		font-weight: 500;
		font-size: 0.9375rem;
		letter-spacing: -0.01em;
		transition: all 0.25s ease;
		position: relative;
	}
	
	.internal-links a::after {
		content: '';
		position: absolute;
		width: 100%;
		height: 2px;
		bottom: 0;
		left: 0;
		background: linear-gradient(90deg, var(--accent) 0%, var(--accent-light) 100%);
		transform: scaleX(0);
		transform-origin: bottom right;
		transition: transform 0.3s ease-out;
	}
	
	.internal-links a:hover {
		color: var(--accent);
	}
	
	.internal-links a:hover::after {
		transform: scaleX(1);
		transform-origin: bottom left;
	}
	
	.internal-links a.active {
		color: var(--accent);
	}
	
	.internal-links a.active::after {
		transform: scaleX(1);
	}
	
	.social-links {
		display: flex;
		gap: 1em;
		align-items: center;
	}
	
	.social-links a {
		display: flex;
		align-items: center;
		padding: 0.5em;
		color: rgb(var(--gray));
		transition: color 0.2s ease;
	}
	
	.social-links a:hover {
		color: var(--accent);
	}
	
	@media (max-width: 768px) {
		nav {
			padding: 0 1em;
		}
		
		.brand-tagline {
			display: none;
		}
		
		.social-links {
			display: none;
		}
		
		.internal-links {
			font-size: 0.9em;
		}
		
		.internal-links a {
			padding: 0.5em 0.75em;
		}
	}
</style>
